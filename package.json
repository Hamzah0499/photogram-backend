{
  "name": "backend_photogram",
  "version": "1.0.0",
  "description": "A Instagram Clone for Scalable Software Solutions Assignment",
  "main": "src/app.ts",
  "scripts": {
    "test": "echo \"No tests yet\"",
    "build": "tsc",
    "start": "node --env-file=.env --watch dist/app.js",
    "dev": "tsx --watch --env-file=.env src/app.ts",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "npx drizzle-kit migrate",
    "db:studio": "npx drizzle-kit studio --port=4983",
    "db:push": "npx drizzle-kit push",
    "db:all": "npm run db:generate && npm run db:migrate && npm run db:studio"
  },
  "keywords": [
    "Instagram Clone",
    "Scalable Software Solutions",
    "Backend Development",
    "TypeScript",
    "MySQL"
  ],
  "author": "Hamzah Khalid",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@azure/storage-blob": "^12.29.1",
    "@types/sentiment": "^5.0.4",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "ejs": "^3.1.10",
    "express": "^5.2.1",
    "http-status-codes": "^2.3.0",
    "imagekit": "^6.0.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "mysql2": "^3.15.3",
    "nodemailer": "^7.0.11",
    "sentiment": "^5.0.2",
    "sharp": "^0.34.5",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.4",
    "drizzle-kit": "^0.18.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}